@model ContactPost
@{
    ViewData["Title"] = "Details";
}

<div class="page-header">
	<div class="row align-items-end">
		<div class="col-lg-8">
			<div class="page-header-title">
				<div class="d-inline">
					<h4>Messages</h4>
					<span>
						Message
					</span>
				</div>
			</div>
		</div>
		<div class="col-lg-4">
			<div class="page-header-breadcrumb">
				<ul class="breadcrumb-title">
					<li class="breadcrumb-item" style="float: left;">
						<a asp-area="admin" asp-controller="dashboard" asp-action="index"> <i class="feather icon-home"></i> </a>
					</li>
					<li class="breadcrumb-item" style="float: left;">
						<a href="#!">Messages</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
</div>
<div class="card">
	<div class="card-block">
		<div>
			<div class="form-group row">
				<label asp-for="Email" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10">
					<p class="form-control">@Model.Email</p>
				</div>
			</div>
			<div class="form-group row">
				<label asp-for="Message" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10">
					<p class="form-control">@Model.Message</p>
				</div>
			</div>
			@if(Model.AnswerDate != null){
				<div class="form-group row">
					<label asp-for="AnswerMessage" class="col-sm-2 col-form-label"></label>
					<div class="col-sm-10">
						<p class="form-control">@Model.AnswerMessage</p>
					</div>
				</div>
				<div class="form-group row">
					<label asp-for="AnswerDate" class="col-sm-2 col-form-label"></label>
					<div class="col-sm-10">
						<p class="form-control">@Model.AnswerDate?.ToString("dd.MM.yyyy HH:mm:ss")</p>
					</div>
				</div>
			}
			<div class="form-group row">
				<label class="col-sm-2"></label>
				<div class="col-sm-10">
					@if (Model.AnswerDate == null)
					{
						<a asp-action="answer" asp-route-id="@Model.Id" class="btn btn-warning m-b-0">Answer</a>
					}
					<a asp-action="index" class="btn btn-primary m-b-0">Go To List</a>
				</div>
			</div>
		</div>
	</div>
</div>

