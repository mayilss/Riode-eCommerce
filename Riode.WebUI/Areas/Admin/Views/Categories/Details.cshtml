@model Category
@{
    ViewData["Title"] = "Details";
}

<div class="page-header">
	<div class="row align-items-end">
		<div class="col-lg-8">
			<div class="page-header-title">
				<div class="d-inline">
					<h4>Categories</h4>
					<span>
						Category Details
					</span>
				</div>
			</div>
		</div>
		<div class="col-lg-4">
			<div class="page-header-breadcrumb">
				<ul class="breadcrumb-title">
					<li class="breadcrumb-item" style="float: left;">
						<a asp-area="admin" asp-controller="dashboard" asp-action="index"> <i class="feather icon-home"></i> </a>
					</li>
					<li class="breadcrumb-item" style="float: left;">
						<a href="#!">Categories</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
</div>
<div class="card">
	<div class="card-block">
		<div>
			<div class="form-group row">
				<label asp-for="Name" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10">
					<input readonly asp-for="Name" class="form-control">
				</div>
			</div>
			<div class="form-group row">
				<label asp-for="Parent.Name" class="col-sm-2 col-form-label">Parent Category</label>
				<div class="col-sm-10">
					<input readonly asp-for="Parent.Name" class="form-control">
				</div>
			</div>
			<div class="form-group row">
				<label asp-for="Id" class="col-sm-2"></label>
				<div class="col-sm-10">
					<a asp-action="edit" asp-route-id="@Model.Id" class="btn btn-warning m-b-0">Edit</a>
					<a asp-action="index" class="btn btn-primary m-b-0">Go To List</a>
				</div>
			</div>
		</div>
	</div>
</div>

