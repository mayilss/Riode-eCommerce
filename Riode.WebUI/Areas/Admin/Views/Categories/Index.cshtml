@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="page-header">
	<div class="row align-items-end">
		<div class="col-lg-8">
			<div class="page-header-title">
				<div class="d-inline">
					<h4>Categories</h4>
					<span>
						The List of all Categories
					</span>
				</div>
			</div>
		</div>
		<div class="col-lg-4">
			<div class="page-header-breadcrumb">
				<ul class="breadcrumb-title">
					<li class="breadcrumb-item" style="float: left;">
						<a asp-area="admin" asp-controller="dashboard" asp-action="index"> <i class="feather icon-home"></i> </a>
					</li>
					<li class="breadcrumb-item" style="float: left;">
						<a href="#!">Categories</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
</div>
<div class="card">
	<div class="card-block table-border-style">
		<div class="table-responsive">
			<table class="table table-hover tree">
				<thead>
					<tr>
						<th>#</th>
						<th>Name</th>
						<th>Parent Name</th>
						<th class="table-operations">
							@if(User.HasAccess("admin.categories.create")){
								<a asp-action="create" class="btn btn-success"><i class="fa-solid fa-plus"></i></a>
							}
						</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model.Where(c=>c.ParentId == null))
				    {
						<tr data-entity-id="@item.Id" class="treegrid-@item.Id">
							<th scope="row">@item.Id</th>
							<td>@item.Name</td>
							<td>@item.Parent?.Name</td>
							<td class="table-operations">
								@if(User.HasAccess("admin.categories.edit")){
								<a asp-action="edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa-solid fa-pen"></i></a>
							}
								@if(User.HasAccess("admin.categories.details")){
								<a asp-action="details" asp-route-id="@item.Id" class="btn btn-secondary"><i class="fa-solid fa-eye"></i></a>
							}
								@if(User.HasAccess("admin.categories.delete")){
								<a onclick="removeEntity(event, @item.Id, '@item.Name')" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></a>
							}
							</td>
						</tr>
						foreach(var child in item.GetChildren())
						{
							<tr data-entity-id="@child.Id" class="treegrid-@child.Id treegrid-parent-@child.ParentId">
								<th scope="row">@child.Id</th>
								<td>@child.Name</td>
								<td>@child.Parent?.Name</td>
								<td class="table-operations">
								@if(User.HasAccess("admin.categories.edit")){
									<a asp-action="edit" asp-route-id="@child.Id" class="btn btn-warning"><i class="fa-solid fa-pen"></i></a>
							}
								@if(User.HasAccess("admin.categories.details")){
									<a asp-action="details" asp-route-id="@child.Id" class="btn btn-secondary"><i class="fa-solid fa-eye"></i></a>
							}
								@if(User.HasAccess("admin.categories.delete")){
									<a onclick="removeEntity(event, @child.Id, '@child.Name')" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></a>
							}
								</td>
							</tr>
						}
				    }
				</tbody>
			</table>
		</div>
	</div>
</div>

@section js{
	<script src="~/admin/assets/libs/sweetalert/sweetalert.min.js"></script>
	<script src="~/admin/assets/libs/jquery-treegrid/js/jquery.treegrid.min.js"></script>

	<script>
		function removeEntity(event, entityId, name){
			swal({
			  title: "Are you sure?",
			  text: `Once deleted, you will not be able to recover "${name}"!`,
			  icon: "warning",
			  buttons: true,
			  dangerMode: true,
			})
			.then((willDelete) => {
			  if (willDelete) {
			   $.ajax({
				   url:`@Url.Action("Delete")/${entityId}`,
				   type: 'post',
				   success: function(response){
					   if(response.error == true){
						toastr["error"](response.message, "Unsuccessful");
						return;
					   }
						toastr["success"](response.message, "Successful");
						$(`tr[data-entity-id=${entityId}]`).remove();
				   },
				   error:function(response){
					   //console.log(response)
				   }
			   });
			  }
			});
		}

		$(document).ready($('.tree').treegrid())
	
	</script>

}

@section css{
    <link rel="stylesheet" type="text/css" href="~/admin/assets/libs/jquery-treegrid/css/jquery.treegrid.min.css">
}

