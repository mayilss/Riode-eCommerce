@model Faq
@{
	ViewData["Title"] = "Details";
}

<div class="page-header">
	<div class="row align-items-end">
		<div class="col-lg-8">
			<div class="page-header-title">
				<div class="d-inline">
					<h4>FAQs</h4>
					<span>
						Details
					</span>
				</div>
			</div>
		</div>
		<div class="col-lg-4">
			<div class="page-header-breadcrumb">
				<ul class="breadcrumb-title">
					<li class="breadcrumb-item" style="float: left;">
						<a asp-area="admin" asp-controller="dashboard" asp-action="index"> <i class="feather icon-home"></i> </a>
					</li>
					<li class="breadcrumb-item" style="float: left;">
						<a href="#!">FAQs</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
</div>
<div class="card">
	<div class="card-block">
		<div>
			<div class="form-group row">
				<label asp-for="Question" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10">
					<input readonly asp-for="Question" class="form-control">
				</div>
			</div>
			<div class="form-group row">
				<label asp-for="Answer" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10">
						@Model.Answer.HtmlToPlain()
				</div>
			</div>
			<div class="form-group row">
				<label class="col-sm-2"></label>
				<div class="col-sm-10">
					<a asp-action="edit" asp-route-id="@Model.Id" class="btn btn-warning m-b-0">Edit</a>
					<a asp-action="index" class="btn btn-primary m-b-0">Go To List</a>
				</div>
			</div>
		</div>
	</div>
</div>

